Description="Nit"

Identifiers=[[ [a-zA-Z_][\w\-]* ]]

Digits=[[ (?:0x|0X|0b)[0-9a-fA-F]+|\d*[\.\_]?\d+(?:[eE][\-\+]\d+)? ]]

Keywords={
  { Id=1,
    List={
      "abort",
      "abstract",
      "and",
      "as",
      "assert",
      "break",
      "catch",
      "class",
      "continue",
      "__debug__",
      "do",
      "else",
      "end",
      "enum"
      "extern",
      "false",
      "for",
      "fun",
      "if",
      "implies",
      "import",
      "in",
      "init",
      "interface",
      "intrude",
      "is",
      "isa",
      "isset",
      "label",
      "loop",
      "module",
      "new",
      "not",
      "null",
      "nullable",
      "once",
      "or",
      "package",
      "private",
      "protected",
      "public",
      "redef",
      "return",
      "self",
      "subset",
      "super",
      "then",
      "true",
      "type",
      "universal"
      "var",
      "while",
      "with",
      "yield"
    },
  },
  { Id=2,
    Regex=[[[A-Z][\/\w]+]],
  },
}

Strings={
  Delimiter=[["""|'''|"|'|`]],
  Escape = [[ \{[^}]*\} ]],
}

IgnoreCase=false

Comments={
  { Block=false,
    Delimiter= { [[#]] },
  }
}

Operators=[[\(|\)|\[|\]|\{|\}|\,|\;|\:|\.|\&|\<|\>|\!|\-|\+|\/|\*|\=|\?|\%|\|]]
